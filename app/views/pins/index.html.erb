<% if current_user %>

      <p>Hello! <%= current_user[:email] %> | <%= link_to 'log out', destroy_user_session_url, method: :delete %>      

      <br/>

      <p>pins | <%= link_to 'create pins', new_pin_path %> </p>

      <ul>
      <% @pins.each do |pin| %>
      <li><%= pin.title %></li>
      <% end %>
      </ul>

<% else %>
      <p>Please <%= link_to 'log in', new_user_session_url %> to view and create pins</p>
<% end %>



